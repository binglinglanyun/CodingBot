<UserControl x:Class="CodingBot.Controls.DataStatusControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CodingBot.Controls"
             Background="{DynamicResource VsBrush.Window}"
             Foreground="{DynamicResource VsBrush.WindowText}"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">
                <local:InputDataStatusControl x:Name="_inputDataStatus"/>
                <Border BorderThickness="1" BorderBrush="Gray" Margin="0,10,0,0"/>
                <StackPanel x:Name="_tableStatus" Orientation="Vertical"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
